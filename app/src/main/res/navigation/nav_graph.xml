<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="uz.harmonic.movieapp.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_navigation_home_info"
            app:destination="@id/navigation_home_info" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home_info"
        android:name="uz.harmonic.movieapp.home.info.InfoFragment"
        android:label="@string/title_Home_info"
        tools:layout="@layout/fragment_home_info" />
</navigation>